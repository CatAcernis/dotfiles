# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
trim_trailing_whitespace = true
end_of_line = lf
insert_final_newline = true

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

[*.{c,h,cpp,hpp}]
indent_size = 2
indent_style = space

[*.lua]
indent_size = 2
indent_style = space

[*.js]
indent_size = 4
indent_style = space

[*.{html, css}]
indent_size = 2
indent_style = space

[*.java]
indent_size = 4
indent_style = space

[*.py]
indent_size = 4
indent_style = space
